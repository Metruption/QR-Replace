	Ranges from 0 (same color) to 765 (max difference)
	"""

def diffPoints(image, p1, p2):
	'''
	@params:
		image is the PIL immage to sample from
		p1 is a point-tuple
		p2 is a point-tuple
	'''
	a = image.getpixel(p1)
	b = image.getpixel(p2)
	return diffColors(a,b)

